{{!< default}}
{{>header}}

<section id="main" class="container">
	<section class="box special">
		<h2>You are browsing: {{tag.name}}</h2>
		<ul class="icons">
			<li><i class="fa fa-bar-chart"></i> {{plural pagination.total empty='No posts' singular='% post' plural='% posts'}}</span></li>
			<li><i class="fa fa-rss"></i> <a href="{{@blog.url}}/tag/{{tag.slug}}/rss/">Subscribe</a></li>
		</ul>
	</section>
	{{#foreach posts columns=2}}	
		{{#if @rowStart}}
		<div class="row">
		{{/if}}
		<div class="6u 12u(2)">
			<section class="box special">
				{{#if image}}
					<h3><a href="{{url}}" title="{{title}}">{{title}}</a></h3>
					<span class="image featured"><img src="{{image}}" alt="{{title}}"/></span>
					<div class="post_content" itemprop="articleBody">{{excerpt characters="200"}}</div>
				{{else}}
					<h3><a href="{{url}}" title="{{title}}">{{title}}</a></h3>
					<div class="post_content" itemprop="articleBody">{{excerpt characters="400"}}</div>
				{{/if}}
				<ul class="actions">
					<li><a href="{{url}}" class="button alt">Read More</a></li>
				</ul>
				<ul class="icons">
				    <li><a class="icon fa-google-plus fa-1x" rel="external nofollow" target="_blank" onclick="return ss_plugin_loadpopup_js_ghost(this);" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="label">Google+</span></a></li>
					<li><a class="icon fa-twitter fa-1x" rel="external nofollow" target="_blank" onclick="return ss_plugin_loadpopup_js_ghost(this);" href="http://twitter.com/intent/tweet/?text={{title}}&url={{url absolute="true"}}"><span class="label">Twitter</span></a></li>
				    <li><a class="icon fa-facebook fa-1x" rel="external nofollow" target="_blank" onclick="return ss_plugin_loadpopup_js_ghost(this);" href="http://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"><span class="label">Facebook</span></a></li>
	   	 		</ul>
	   	 		<div class="tags">
	   	 			{{tags separator=" | " autolink="true" prefix="Tagged in: "}}
	   	 		</div>
	   	 		<div class="author-desc">
	   	 			Posted on <time class="date_uber" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time> By <span itemprop="author">{{author}}</span>
	   	 		</div>
			</section>
		</div>
		{{#if @rowEnd}}
		</div>
		{{/if}}	
	{{/foreach}}
	<div class="clear"></div>	
	
	{{#if pagination}}
	{{{pagination}}}
	{{/if}}
</section>
{{> footer}}